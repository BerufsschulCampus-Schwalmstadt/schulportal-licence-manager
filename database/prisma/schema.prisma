// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model joyrUser {
  email        String      @unique
  password     String
  smsAccount   smsAccount? @relation(fields: [smsAccountId], references: [id])
  smsAccountId String?
}

model smsAccount {
  id              String           @id @default(uuid())
  smsUsername     String           @unique
  smsPassword     String
  joyrUsers       joyrUser[]
  licenceAccounts licenceAccount[] // licence accounts this user has access to
}

model licenceAccount {
  licenceAccountId String       @id
  smsAccounts      smsAccount[] //accounts able to use this SMS licence account
  licenceData      licenceData  @relation(fields: [licenceDataId], references: [id])
  licenceDataId    String       @unique
}

model licenceData {
  id                 String          @id @default(uuid())
  lastSyncedDateTime DateTime        @updatedAt
  applicationNumber  String
  subservice         String
  type               String
  processingOffice   String
  assignedPeron      String
  submittedDate      String
  updatedDate        String
  status             String
  actions            String
  licenceAccount     licenceAccount?
}
